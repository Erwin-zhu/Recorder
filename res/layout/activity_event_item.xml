<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/event_rl" >

    <Button
        android:id="@+id/eventitem_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="#33b5e5"
        android:background="@color/cornsilk"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="@string/eventitem_button" />
    
    <TextView
        android:id="@+id/eventitem_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="3dp"
        android:layout_alignBaseline="@id/eventitem_button"
        android:textColor="#33b5e5"
        android:text="@string/eventitem_textview"
        android:textSize="25sp" />

</RelativeLayout>
